#!/usr/bin/env bash
# Gracefully reloads Gunicorn.

if pgrep gunicorn >/dev/null; then
    pgrep gunicorn | xargs kill -HUP
    sleep 2

    if pgrep gunicorn >/dev/null; then
        echo "OK: Gunicorn reloaded successfully."
    else
        echo "NOK: Failed to reload Gunicorn."
    fi
else
    echo "NOK: Gunicorn process not found."
fi
